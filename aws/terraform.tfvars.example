# AWS Configuration - Copy this to terraform.tfvars and update values

# Project Configuration
project_name = "my-app"
environment  = "production"

# AWS Configuration
aws_region = "us-east-1"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.0.0/20", "10.0.16.0/20"]
private_subnet_cidrs = ["10.0.128.0/20", "10.0.144.0/20"]

# EC2 Instance Configuration
instance_count  = 2
instance_type   = "t3.micro"
ami_id         = "ami-xxxxxxxxx"  # Use your custom Debian AMI from Packer
key_name       = "my-keypair"
purpose        = "web-server"

# Volume Configuration
root_volume_size   = 20
root_volume_type   = "gp3"
encrypt_root_volume = false

# Optional: Custom user data script
# user_data = file("user-data.sh")